{
  "name": "@akashic-extension/ss2asa",
  "version": "2.8.0",
  "description": "Convert SpriteStudio files to akashic-animation files.",
  "bin": {
    "ss2asa": "bin/run"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "prepare": "npm run clean && npm run build",
    "clean": "rimraf ./lib",
    "start": "npm run build && node bin/run",
    "build": "tsc -p ./",
    "lint": "npm run lint:ts && npm run lint:md",
    "lint:ts": "eslint src/**/*.ts --fix",
    "lint:md": "remark . --frail --no-stdout --quiet --rc-path ./.remarkrc",
    "test": "jest && npm run lint"
  },
  "author": "DWANGO Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/akashic-games/ss2asa.git"
  },
  "publishConfig": {
    "@akashic-extension:registry": "https://registry.npmjs.org/"
  },
  "files": [
    "bin",
    "lib"
  ],
  "devDependencies": {
    "@akashic/eslint-config": "^0.1.2",
    "@akashic/remark-preset-lint": "~0.1.1",
    "@types/commander": "2.12.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.14.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "del": "^2.2.2",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "~26.6.3",
    "remark-cli": "^9.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@akashic-extension/akashic-animation": "file:../akashic-animation/akashic-extension-akashic-animation-4.1.0.tgz",
    "@akashic/akashic-engine": "^3.18.1",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "xml2js": "^0.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "./**/*[sS]pec.js"
    ]
  }
}
